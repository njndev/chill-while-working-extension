{
  "manifest_version": 3,
  "name": "Chill While Working",
  "version": "1.0.0",
  "description": "Launch YouTube videos in a draggable popup window with custom sizing and autoplay settings.",
  "author": "njndevai",
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "system.display",
    "sidePanel",
    "contextMenus"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://m.youtube.com/*",
    "https://music.youtube.com/*",
    "https://youtu.be/*"
  ],
    "icons": {
        "16": "images/logo_16.png",
        "32": "images/logo_32.png",
        "48": "images/logo_48.png",
        "128": "images/logo_128.png"
    },
  "action": {
    "default_title": "Chill While Working",
    "default_icon":  "images/logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "side_panel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://m.youtube.com/*",
        "https://music.youtube.com/*",
        "https://youtu.be/*"
      ],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
