{
  "manifest_version": 3,
  "name": "Chill While Working",
  "version": "1.1.0",
  "description": "Picture-in-Picture for all videos with floating buttons. Click 'Chill PiP' button on any video page!",
  "author": "njndevai",
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "system.display",
    "sidePanel",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "images/logo_16.png",
    "32": "images/logo_32.png",
    "48": "images/logo_48.png",
    "128": "images/logo_128.png"
  },
  "action": {
    "default_title": "Chill While Working - PiP all videos"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "side_panel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["universal_pip.js"],
      "css": ["chill_floating_button.css"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://m.youtube.com/*",
        "https://music.youtube.com/*",
        "https://youtu.be/*"
      ],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["universal_pip_inject.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
